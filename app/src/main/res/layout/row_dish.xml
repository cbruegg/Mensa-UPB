<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="dishViewModel"
            type="com.cbruegg.mensaupb.viewmodel.DishViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/header_gray"
            android:visibility="@{dishViewModel.showDivider ? View.VISIBLE : View.GONE}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="@{dishViewModel.headerText}"
            android:textColor="@color/header_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="@{dishViewModel.hasHeader ? View.VISIBLE : View.GONE}"
            tools:text="Essen"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:onClick="@{onClickListener::onClick}"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp">

            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/dish_image"
                android:visibility="@{dishViewModel.hasThumbnail ? View.VISIBLE : View.GONE}"
                app:forceCache="@{true}"
                app:imageUrl="@{dishViewModel.dish.thumbnailImageUrl}"
                app:scaleType="@{android.widget.ImageView.ScaleType.CENTER_CROP}" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dishViewModel.name}"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="Schupfnudelpfanne" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dishViewModel.priceText}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dishViewModel.badgesText}"
                    android:visibility="@{dishViewModel.hasBadges ? View.VISIBLE : View.GONE}" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>